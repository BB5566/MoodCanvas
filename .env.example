# MoodCanvas Environment Configuration
# 複製此檔案為 .env 並填入真實的 API 密鑰

# Perplexity AI API 密鑰 (最新最強模型)
# 取得方式：https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Stability AI API 密鑰 (支援多種模型)
# 取得方式：https://platform.stability.ai/account/keys
STABILITY_API_KEY=your_stability_api_key_here

# AI 模型設定 (可選擇不同成本與品質的模型)
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online     # 高性能模型（已驗證）
PERPLEXITY_FALLBACK_MODEL=llama-3.1-sonar-small-128k-online  # 經濟型備用模型
STABILITY_MODEL=sdxl-1.0                             # 經濟實惠的圖片生成模型 (0.9 credits)

# Perplexity 模型選項 (按性能排序，已驗證)：
# llama-3.1-sonar-large-128k-online    # 高性能模型（已驗證）
# llama-3.1-sonar-small-128k-online    # 快速經濟模型（已驗證）
# sonar-pro                            # 舊版高級模型

# 其他可選 Stability 模型：
# STABILITY_MODEL=sd3-large-turbo                    # 高品質模型 (4 credits)
# STABILITY_MODEL=stable-image-core                  # 平衡模型 (3 credits)
# STABILITY_MODEL=sd3-medium                         # 中等模型 (3.5 credits)

# 未來 Perplexity 圖像功能準備
PERPLEXITY_IMAGE_ENABLED=false                      # 未來啟用 Perplexity 圖像生成
PERPLEXITY_IMAGE_MODEL=dalle-3                      # 預留圖像模型設定

# OpenAI API 密鑰 (選用)
# 取得方式：https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# 資料庫配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=mood_canvas_db
DB_USER=your_db_user
DB_PASS=your_db_password

# 應用程式設定
DEBUG=false
APP_URL=https://your-domain.com/MoodCanvas

# 安全設定
SESSION_TIMEOUT=3600
RATE_LIMIT_ENABLED=true
ENABLE_SECURITY_CHECKS=true

# 儲存設定
STORAGE_MODE=file
