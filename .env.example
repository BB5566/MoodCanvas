# MoodCanvas Environment Configuration
# 複製此檔案為 .env 並填入真實的 API 密鑰和配置

# ====================================================================
# AI 服務配置 (至少配置一個圖片生成和一個文字生成服務)
# ====================================================================

# Perplexity AI (主要用於文字生成和圖片提示詞優化)
# 註冊網址：https://www.perplexity.ai/settings/api
# 推薦：必須配置，用於生成 AI 心情短語和圖片提示詞優化
PERPLEXITY_API_KEY="your_perplexity_api_key_here"
PERPLEXITY_MODEL="sonar"

# Google Gemini (文字生成備用)
# 註冊網址：https://aistudio.google.com/app/apikey
# 推薦：作為 Perplexity 的備用服務
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_TEXT_MODEL="gemini-2.5-flash"

# Google Vertex AI (主要圖片生成服務)
# 設定教學：請參考 README.md 中的 Vertex AI 設定步驟
# 推薦：必須配置，提供高品質的 AI 圖片生成
GCP_PROJECT_ID="your-gcp-project-id"
GCP_REGION="us-central1"
# 注意：Vertex AI 使用服務帳戶 JSON 檔案驗證，不需要 API Key


# OpenAI (選用)
# 註冊網址：https://platform.openai.com/api-keys
# 選用：可作為額外的 AI 服務
OPENAI_API_KEY="your_openai_api_key_here"

# ====================================================================
# 資料庫配置
# ====================================================================

DB_HOST=localhost
DB_PORT=3306
DB_NAME=mood_canvas_db
DB_USER=your_database_username
DB_PASS=your_database_password

# ====================================================================
# 應用程式配置
# ====================================================================

# 除錯模式 (生產環境請設為 false)
DEBUG=false

# 應用程式網址 (請修改為您的實際域名)
APP_URL=https://your-domain.com

# ====================================================================
# 安全設定
# ====================================================================

# Session 超時時間 (秒)
SESSION_TIMEOUT=3600

# 啟用安全檢查
ENABLE_SECURITY_CHECKS=true

# 啟用速率限制
RATE_LIMIT_ENABLED=true

# Session 名稱
SESSION_NAME=moodcanvas_session

# 管理員密碼 (可選，用於特殊管理功能)
ADMIN_PASSWORD=your_secure_admin_password

# ====================================================================
# 檔案儲存設定
# ====================================================================

# 儲存模式 (目前僅支援 file)
STORAGE_MODE=file

# ====================================================================
# 進階設定 (通常不需要修改)
# ====================================================================

# 資料庫字元集
DB_CHARSET=utf8mb4

# Perplexity 備用模型
PERPLEXITY_FALLBACK_MODEL=sonar

# 圖片生成相關設定
UPLOAD_MAX_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif